                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:adjustViewBounds="false"
                                android:scaleType="centerCrop"
                                android:src="@drawable/meatless" />

                            <TextView
                                android:id="@+id/txtView_Meatless_diet_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="75dp"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Meatless"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </RelativeLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_vegetarian_diet_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@drawable/selector_cardview_filter_activity"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vegetarian" />

                            <TextView
                                android:id="@+id/txtView_Vegetarian_diet_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Vegetarian"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_vegan_diet_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@drawable/selector_cardview_filter_activity"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vegan" />

                            <TextView
                                android:id="@+id/txtView_Vegan_diet_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Vegan"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_glutenFree_diet_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
