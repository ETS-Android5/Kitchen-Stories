                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sugar_free" />

                            <TextView
                                android:id="@+id/txtView_SugarFree_diet_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="75dp"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Sugar-free"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </RelativeLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_alcohol_diet_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
