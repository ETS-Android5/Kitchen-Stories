<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="@string/category"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <Button
                android:id="@+id/button_category_Filter_Activity"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/source_sans_pro_bold"
                android:textAllCaps="false"
                android:textColor="@color/Gray600"
                app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:iconGravity="textEnd"
                app:iconPadding="3dp"
                app:iconSize="20dp"
                app:iconTint="@color/DeepPurpleA700" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearlayout_category_Filter_Activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_starter_category_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@drawable/selector_cardview_filter_activity"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/starter" />

                            <TextView
                                android:id="@+id/txtView_starter_category_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Starter"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_main_category_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@drawable/selector_cardview_filter_activity"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/main" />

                            <TextView
                                android:id="@+id/txtView_main_category_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Main"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_dessert_category_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@drawable/selector_cardview_filter_activity"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dessert" />

                            <TextView
                                android:id="@+id/txtView_dessert_category_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Dessert"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_snack_category_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@drawable/selector_cardview_filter_activity"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/snack" />

                            <TextView
                                android:id="@+id/txtView_snack_category_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Snack"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_breakfast_category_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@drawable/selector_cardview_filter_activity"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/breakfast" />

                            <TextView
                                android:id="@+id/txtView_breakfast_category_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Breakfast"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_drink_category_Filter_Activity"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/orange50"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@drawable/selector_cardview_filter_activity"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drink" />

                            <TextView
                                android:id="@+id/txtView_drink_category_filter_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:text="Drink"
                                android:textColor="@drawable/selector_color_filter_activity"
                                android:textSize="17sp" />
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="@string/diet"
