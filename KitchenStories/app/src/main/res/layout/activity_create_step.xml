<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.createRecipe.CreateStep"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List Step"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_steps_Create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ShoppingList"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_Add_CreateStep_Activity"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Add a step"
                android:textAllCaps="false"
                android:textColor="@color/DeepPurple900"
                android:textSize="20dp"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconGravity="textStart"
                app:iconSize="35dp"
                app:iconTint="@color/DeepPurple900"
                app:strokeColor="@color/Indigo900"
                app:strokeWidth="1dp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_Finish_CreateStepActivity"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Finish"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>