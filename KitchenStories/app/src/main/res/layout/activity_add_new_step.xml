<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.createRecipe.AddNewStep"
    android:orientation="vertical"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="7dp"
        app:rippleColor="@android:color/transparent"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/orange50"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Step"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:textSize="20dp"
                android:gravity="center"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STEP"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/editText_name_AddNewStepActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add name"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD A STEP PHOTO"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="420dp"
                android:layout_height="420dp"
                app:cardCornerRadius="15dp"
                android:elevation="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView_step_AddNewStepActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upload"
                    android:scaleType="centerCrop"
                    />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STEP DESCRIPTION"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/editText_des_AddNewStepActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add description"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGREDIENTS USED"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txt_ingre_AddNewStepActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textColor="@color/DeepPurple900"
                android:textSize="17sp"
                />

            <Button

                android:id="@+id/btn_Add_Ingre_AddNewStepActivity"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:padding="10dp"
                android:text="Add an ingredient"
                android:textAllCaps="false"
                android:textColor="@color/DeepPurple900"
                android:textSize="20dp"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/DeepPurple900"
                app:strokeColor="@color/Indigo900"
                app:strokeWidth="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UTENSILS"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txt_utensils_AddNewStepActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textColor="@color/DeepPurple900"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_Add_Utensil_AddNewStepActivity"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:padding="10dp"
                android:text="Add an utensil"
                android:textAllCaps="false"
                android:textColor="@color/DeepPurple900"
                android:textSize="20sp"
                app:icon="@drawable/ic_baseline_add_16"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/DeepPurple900"
                app:strokeColor="@color/Indigo900"
                app:strokeWidth="1dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <Button
                android:id="@+id/btn_Save_AddNewStepActivity"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Save"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>