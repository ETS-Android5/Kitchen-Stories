<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="648dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="489dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:text=" YOU HAVEN'T CREATED ANY COOKBOOKS YET."
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageViewtab1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:text="Create cookbooks to easily organize all your
favourites in folders"
                android:layout_margin="10dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btCookbooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text=" Create your first cookbook" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>