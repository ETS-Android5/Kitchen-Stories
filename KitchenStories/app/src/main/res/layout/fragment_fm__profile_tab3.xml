<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.pk_profile.fm_Profile_tab3">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image1_Tab3_ProfileActivity"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/iphone" />

        <View
            android:id="@+id/image2_Tab3_ProfileActivity"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/ic_favorite"
            android:backgroundTint="@color/DeepPurple900" />

        <TextView
            android:id="@+id/tv1_Tab3_ProfileActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1_Tab3_ProfileActivity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:text="Looks like you haven't liked anything yet!"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv2_Tab3_ProfileActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1_Tab3_ProfileActivity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:maxWidth="370dp"
            android:text="If you love an article or a recipe, simply tap on the heart to save it for later! It'll be right here waiting for you."
            android:textColor="@color/black"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView_tab3_ProfileActivity"
            />

    </RelativeLayout>


</FrameLayout>